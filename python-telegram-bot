from telegram import Update, ReplyKeyboardMarkup, KeyboardButton, WebAppInfo
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [
        [KeyboardButton("üéÆ –ó–∞–ø—É—Å—Ç–∏—Ç–∏ –≥—Ä—É", web_app=WebAppInfo(url="https://—Ç–≤—ñ–π_–ª–æ–≥—ñ–Ω.github.io/hamster-game/"))]
    ]
    reply_markup = ReplyKeyboardMarkup(keyboard, resize_keyboard=True)
    await update.message.reply_text("–ü—Ä–∏–≤—ñ—Ç! –ù–∞—Ç–∏—Å–Ω–∏ –∫–Ω–æ–ø–∫—É, —â–æ–± –ø–æ–≥—Ä–∞—Ç–∏ üêπ", reply_markup=reply_markup)

app = ApplicationBuilder().token("–¢–£–¢_–í–ê–®_–¢–û–ö–ï–ù").build()
